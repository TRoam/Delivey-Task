<div class="span10" >
  <h1>All Components </h1>
<div  style="margin-bottom: 15px">

<button id="component-create-button" class="btn btn-info" data-toggle="button">Create</button>

<button id="component-import" class="btn btn-info " data-toggle="button">Import</button>
<%= link_to "Packages Action",custom_components_path,:class => "btn btn-info"%>
</div>
<div id="component-import-form">
	<div class="alert alert-info">
      You can get import help 
      <strong><a  data-toggle="modal" href="#import-help">here!</a></strong>
    </div>
    <div class="alert alert-success">
	<strong>You can import a file</strong>
	<%= form_tag upload_components_path ,:html =>{:multipart => true} ,:remote=>true do%>
	<%= file_field_tag :file%>	
    <%= submit_tag "Import"%>
    <% end %> 
    </div>  
</div>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice%>
</div>
<%= render "import"%>

<div id="mytable">
<table id="checkmen" class="display">
	<thead>
		<th>Appl.Component</th>
		<th>Description</th>
    <th>Original</th>
    <th>Dev.:Comp. Owner</th>
		<th>Dev.:Production Owner</th>
		<th>IMS: Manager</th>
    <th>Aciton</th>
	</thead>
	<tbody id="component_tbody">
		<% @components.each do |component|%>
			<%= render component%>
		<%end%>
	</tbody>	
</table>
</div>
</div>
<div class="span2" >
<div id="create_form">
  <div class="alert alert-success" id="component_<%=@component.id%>" style="padding:5px">
<%= form_for(@component, :remote => true) do |f| %>
  <% if @component.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@component.errors.count, "error") %> prohibited from being saved:</h2>
      <ul>
      <% @component.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Appl.Component" %>
    <%= f.text_field :applicationcomponent ,:placeholder =>"Applicationcomponent" %>
  </div>
  <div class="field">
    <%= f.label :Description %>
    <%= f.text_field :description,:placeholder =>"Enter some descript" %>
  </div>
  <div class="field">
    <%= f.label :Original %>
    <%= f.text_field :original,:placeholder =>"Original" %>
  </div>
  <div class="field">
    <label >Dev.:Comp. Owner</label>
    <%= f.text_field :dev_comp_owner %>
  </div>
  <div>
    <label>Dev.:Product Owner</label>
    <%= f.text_field :dev_product_owner %>
  </div>
  <div>
   <label >IMS: Manager</label>
    <%= f.text_field :ims_manager %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>
<div id="edit_area"></div>
</div>
