<div class="alert alert-success" id="component_<%=@component.id%>" style="padding:15px 25px 15px 5px">
  <a  id="component_<%=@component.id%>" class="close" data-dismiss="alert" >Ã—</a>
<%= form_for(@component, :remote => true) do |f| %>
  <% if @component.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@component.errors.count, "error") %> prohibited from being saved:</h2>
      <ul>
      <% @component.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Appl.Component" %>
    <%= f.text_field :applicationcomponent ,:placeholder =>"Applicationcomponent" %>
  </div>
  <div class="field">
    <%= f.label :Description %>
    <%= f.text_field :description,:placeholder =>"Enter some descript" %>
  </div>
  <div class="field">
    <%= f.label :Original %>
    <%= f.text_field :original,:placeholder =>"Original" %>
  </div>
  <div class="field">
    <label >Dev.:Comp. Owner</label>
    <%= f.text_field :dev_comp_owner %>
  </div>
  <div>
    <label>Dev.:Product Owner</label>
    <%= f.text_field :dev_product_owner %>
  </div>
  <div>
   <label >IMS: Manager</label>
    <%= f.text_field :ims_manager %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>