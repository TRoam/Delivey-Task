<%= form_tag package_to_component_components_path ,:remote=>true  do%>
<%= submit_tag "Submit",:class => "btn"%>
  <div class="span4" >
	<table id="checkmen">
		<thead>
			<th></th>
			<th>Appl.Component</th>
		</thead>
		<tbody>
			<%@component.each do |c|%>
			<tr>
			<td><%= radio_button_tag 'component',c.id %></td>
			<td><%= c.applicationcomponent %></td>
			</tr>
		    <% end %>

		</tbody>
	</table>
<div>

<div class="span8 offset8">
	<table id="package">
		<thead>
			<th><input type="checkbox" onclick="toggle_checkall('checkman', this.checked);" /></th>
			<th>Package</th>
		</thead>
		<tbody >
			<%@package.each do |p| %>
			<tr id="package_<%= p.id%>">
				<td id="check_box"><%= check_box_tag "checkman_ids[]", p.id %></td>
				<td><%= p.package %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div>
<% end %>