<h3>Packages</h3>
<hr>
<%= link_to "Assign",custom_packages_path,:class => "btn btn-info"%>
<table id="checkmen" class="display">
    <thead id="checkmen">
    	<th>Package</th>
    	<th>Appl.Component</th>
    	<th>Owner</th>
    </thead>
    <tbody>
        <%  @package.each do |p|%>
        <tr id="package_<%= p.id%>">
    	<td><%= p.package %></td>
    	<td>
            <% if !p.component_id.nil? %>
            <%= p.component.applicationcomponent %>
            <%end%>
        </td>
    	<td class="package_edit" id="<%=p.id%>"><%if p.owner.present? %>
            <%= p.owner %>
            <%else %>
            <i class="icon-pencil"></i>
            <% end -%>
        </td>
        </tr>
        <% end -%>
    </tbody>
</table>