<div class="span10" >
<h4>Object information</h4>
<hr>

<div style="margin-bottom: 15px">
<%= link_to "Create Object" ,new_objectresponsible_path,:remote=>true,:class=>"btn btn-info"%>
</div>
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= notice%>
</div>
<div id="table_area" >
<table id="checkmen" class="display">
	<thead>
		<th>Object Name</th>
		<th>Object Type</th>
		<th>Package</th>
		<th>Appl.Component</th>
		<th>Contact</th>
		<th>Responsible Person</th>
		<th>OrgUnit</th>
		<th style="display: none"></th>
	</thead>
	<tbody>
		<% @object.each do |object|%>
		<tr id="object_<%= object.id%>">
		<td><%= object.objectname%></td>
		<td><%= object.objecttype%></td>
		<td><%= object.package.package %></td>
		<td>
			<% if object.package.component_id.nil? %>
			<%else%>
			<%=  object.package.component.applicationcomponent%></td>
			<% end -%>
		<td><%= object.contact%></td>
		<%if object.person_id %>
		<td><%= object.person.sapname%></td>
		<td><%= object.person.orgunit %></td>
		<% else %>
		<td></td>
		<td></td>
		<% end -%>			
		<td style="display:none"><%= link_to "" , edit_objectresponsible_path(object.id),:remote=>true,:class=>"icon-pencil"%></td>
		</tr>
		<%end%>
	</tbody>
</table>
</div>
</div>
<div class="span2" >
<div id="person_right">
	<div id="object_create_area"></div>
	<div id="object_edit_area">
	</div>
</div>
</div>