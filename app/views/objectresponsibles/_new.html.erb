  	<%= c.label :Package%>
  	<%= c.select  :package, options_from_collection_for_select(@package,:id,:package) %>
  </div>
<%end%>
  <div>
  	<%= f.label :Objectname%>
  	<%= f.text_field :objectname ,:placeholder => "please enter objectname.."%>
  </div>
    <div>
    	<%= f.label :Object_Type %>
    	<%= f.text_field :objecttype ,:placeholder => "what's the type.."%>
    </div>
    <%= f.label :Contact %>
    <%= f.text_field :contact ,:placeholder => " contact person.."%>
  <div class="field">
    <%= f.label :Responsible_Person %>
    <%= f.text_field :person ,:placeholder => "who Responsible for this object.."%>
  </div>
  <div class="actions">
    <%= f.submit "Submit"%>
  </div>
<% end %>
</div>