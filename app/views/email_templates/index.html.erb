<h4>Email Template</h4>
<hr>
<div class="span3">
			
</div>
<div class="span8">
<%= link_to  new_email_template_path ,:remote =>true do %>
	<button class="btn btn-success"> New Template</button>
<% end -%>
<div id="template_edit_area">
<%= form_tag  @email_template,:remote=>true do %>
<div class="input-prepend"> 
<span class="add-on"><i class=" icon-tag"></i>Template Name:</span>
<%= text_field_tag :name , "",:class=>"span8" %>
</div>
<%= text_area_tag :template , "" %> <br>
<%= submit_tag "New Template" ,:class =>"btn btn-success"%>
<% end -%>
</div>
</div>