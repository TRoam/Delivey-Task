<div id="commentmyModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
<div class="modal-header">
    <button type="button"  id="checkman_<%= @checkman.id%>" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Comments and Detail information</h3>
  </div>
  <div class="modal-body">
<div id="item-detail">
	<div class="alert alert-info" id="checkman_<%= @checkman.id%>">
	<h5>Detail information</h5>
	 
	 <li>DLM:<br /><%= @checkman.dlm%></li>
	 <li>1st Fount:<%= @checkman.foundat%></li>
	 <li>Update at:<%= @checkman.updated_at%></li>
	 <li>Unique Id:<%= @checkman.uniqueid%></li>
</div>
</div>
<div class="alert" id="old-comment">
<h5>Comments</h5>
 	<% @checkman.comments.each do |c|%>
 <div class="row-fluid" id="<%= c.id%>">
 	<div class="span12">
 		<strong>Time:</strong><%= c.updated_at%> <br />
 		<strong>Chang By:</strong><%= c.commenter%><br />
 	    <strong> Comntent:</strong><%= c.content%><br />
 	    <strong>Status:</strong><%= c.feedback%><br />
 	</div>
 </div>
 ----------------------------------------------------------
 <%end%>
</div>	
<fieldset>
<%= form_for @checkman,:url=>{:controller=>:checkmen,:action=>:update},:html=>{:multipart=>true},:remote=>true  do |f|%>
<%= f.fields_for :comments do |c|%>
<div class="alert alert-success">
<p class="help-block">Please chose the status of this item</p>
<label class="radio">
<%= c.radio_button :feedback,"open"%><i class="icon-share"></i>open
</label>
<label class="radio">
<%= c.radio_button :feedback,"solved"%><i class="icon-check"></i>solved
</label>
</div>
<div class="alert alert-info" >
<p class="help-block">Your comment</p>
<%= c.text_area :content ,:placeholder =>"Please enter your comment here" ,:style =>"height:60px"%>
<%end%>
</div>

</fieldset>
</div>
<div class="modal-footer">
   
    <%= f.submit 'Submit',:class=>"btn"%>
<%end%>
  </div>
</div>