<div id="commentModal" class="modal hide fade" >
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
<div id="item-detail">
	<div class="alert alert-info" id="checkman_<%= @checkman.id%>">
	<h4>Detail information</h4>
	 
	 <li>DLM:<br /><%= @checkman.dlm%></li>
	 <li>Realease system:<br /><%= @checkman.release%></li>
	 <li>1st Fount:<br /><%= @checkman.foundat%></li>
	 <li>Update at:<br /><%= @checkman.updated_at%></li>
	 <li>Unique Id:<br /><%= @checkman.uniqueid%></li>
</div>
</div>

<div class="alert" id="old-comment">
<h5>Comments</h5>
 	<% @checkman.comments.each do |c|%>
 <div class="row-fluid" id="<%= c.id%>">
 	<div class="span10">
 	<%= c.commenter%> at <%= c.updated_at%>Says:<br /><%= c.content%>
 	</div>
 	<div class="span2">
       <%= c.feedback%>
 	</div>
 </div>
 ---------------------------------------------
 <%end%>
</div>	
<fieldset>
<%= form_for @checkman,:url=>{:controller=>:checkmen,:action=>:update},:html=>{:multipart=>true},:remote=>true  do |f|%>
<%= f.fields_for :comments do |c|%>
<div class="alert alert-success">
<p class="help-block">Please chose the status of this item</p>
<label class="radio">
<%= c.radio_button :feedback,"open"%><i class="icon-share"></i>open
</label>
<label class="radio">
<%= c.radio_button :feedback,"solved"%><i class="icon-check"></i>solved
</label>
</div>
<div class="alert alert-info" style="padding:5px">
<p class="help-block">Your comment</p>
<%= c.text_area :content ,:placeholder =>"Please enter your comment here" ,:style =>"height:60px"%>
<%end%>
</div>
<%= f.submit 'Submit'%>
<%end%>
</fieldset>
</div>