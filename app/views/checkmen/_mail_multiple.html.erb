<div id="emailModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header alert-info">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <span>Edit Your mail Format,and can save as defult format for next time automatic sending
!</span>
  </div>
  <div class="modal-body">
    <div>
      <%= form_tag send_multiple_checkmen_path, :remote =>true do%>
      <p class="help-block">If there are more the one mail address,please split by ";"</p>
      <div class="input-prepend">
      <span class="add-on">TO<i class=" icon-user"></i></span>
      <%= text_field_tag :T_mail_address,"#{@c_mail_address}"%>
      </div>
      <div class="input-prepend">
      <span class="add-on">CC<i class=" icon-user"></i></span>
      <%= text_field_tag  :T_mail_cc_address %>
      </div>
      <div class="input-prepend">
      <span class="add-on">Suject<i class=" icon-book"></i></span>
      <%= text_field_tag  :T_mail_subject ,"[Action] Open production relevant CHECKMAN messages in #{@checkman.first.release}"%>
      </div>
      <%= select_tag "template" ,options_from_collection_for_select(@email_templates,:id,:name) ,:include_blank=>true,:style=>"width:510px" %>
      <div id="mail_content">
      <!--  -->
      </div>
    </div>
  </div>
  <div style="display:none">
    <%= text_area_tag :filepath, "#{@cu_filepath}" %>
    <%= text_field_tag :ids , "#{@checkman_ids}"%>
  </div>
  <div class="modal-footer">
    <%= submit_tag "Send" ,:class => "btn-primary"%>
    <%end%>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>